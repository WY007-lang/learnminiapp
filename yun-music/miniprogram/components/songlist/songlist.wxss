/* components/songlist/songlist.wxss */
.playlist-yangshi{
  width: 220rpx;
  position: relative;
  padding-bottom: 20rpx;
}
.playlist-img{
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}
.playlist-count{
  color: white;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0);
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  padding-left: 26rpx;
  font-size: 24rpx;
}
.playlist-name{
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;/*以两行的形式显示，超出部分隐藏*/
  overflow: hidden;
  text-overflow: ellipsis;/*文本溢出处理*/
}