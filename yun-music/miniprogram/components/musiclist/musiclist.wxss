/* components/musiclist/musiclist.wxss */
.musiclist-container{
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center;/*垂直居中*/
}
.musiclist-index{
  color: #888;
  font-size: 34rpx;
  width: 80rpx;
}
.musiclist-info{
  flex-grow: 1;
  width: 0;/*可以不按获取到宽度计算，开始按照弹性盒子给的宽度进行获取字符，超出部分省略*/
}
.musiclist-name{
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}
.musiclist-alia{
  color: #888;
}
.musiclist-singer{
  font-size: 24rpx;
  color: #888;
}
/*playing对应的下边的view,text会变红*/
.playing view,.playing text{
  color: red;
}